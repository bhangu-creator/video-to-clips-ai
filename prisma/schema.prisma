generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Video {
  id        String   @id @default(uuid())
  filename  String
  duration  Int
  createdAt DateTime @default(now())

  clips     Clip[]
}

model Clip {
  id          String   @id @default(uuid())
  videoId     String
  title       String
  startTime   Float
  endTime     Float
  orientation String
  filePath    String
  createdAt   DateTime @default(now())

  video       Video    @relation(fields: [videoId], references: [id])
}

